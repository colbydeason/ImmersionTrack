<Window x:Class="ImmersionTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImmersionTrack"
        xmlns:views="clr-namespace:ImmersionTrack.Views"
        xmlns:viewmodels="clr-namespace:ImmersionTrack.ViewModels"
        mc:Ignorable="d"
        Title="Stopwatch" Height="450" Width="800">
    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewmodels:ImmersionTimeViewModel}">
                    <views:ImmersionTimeView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>
