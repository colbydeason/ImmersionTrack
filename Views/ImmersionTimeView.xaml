<UserControl x:Class="ImmersionTrack.Views.ImmersionTimeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImmersionTrack.Views"
             xmlns:viewModel ="clr-namespace:ImmersionTrack.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <Label HorizontalAlignment="Center" FontSize="50" Margin="20">ImmersionTime</Label>
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="100" Text="{Binding ElapsedTime, StringFormat=N0}"/>
            <Button FontSize="50" Margin="20" Command="{Binding StartAndStopCommand}">Start/Stop</Button>
        </StackPanel>
    </Grid>
</UserControl>
